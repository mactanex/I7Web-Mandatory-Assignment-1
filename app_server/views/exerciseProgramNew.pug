extends layout 

block content
    div.container.text-center
        h1 Add new Program
        form(action="/exerciseProgram/newExercise", method="post")
            div(class='form-input')
                label(for="name") 
                   b Name: 
                br
                input(type="text", name="name")
            div(class='form-input')
                label(for="description")
                    b Description:
                br
                input(type="textarea", name="description")
            div(class='form-input')
                label(for="rep")
                    b Repetitions:
                br
                input(type="number", name="rep")
            div(class='form-input')
                label(for="repsOrTime")
                    b Repetitions or time:
                br
                input(type="text",name="repsOrTime")
            br
            button(type='submit' class="btn btn-primary") Add exercise

        