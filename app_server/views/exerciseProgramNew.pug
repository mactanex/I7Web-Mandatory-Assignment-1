extends layout 

block content
    div.container.text-center
        h1 Add new Program
        form(action="/newExercise", method="post")
            div(class='form-input')
                label(for="name")
                input(type="text", name="name")
            div(class='form-input')
                label(for="description")
                input(type="textarea", name="description")
            div(class='form-input')
                label(for="rep")
                input(type="number", name="rep")
            div(class='form-input')
                label(for="repsOrTime")
                input(type="text",name="repsOrTime")
            button(type='submit' class="btn btn-primary") Add exercise

        